NODE_ENV=development
PORT=5000

# 1. DATABASE (MongoDB)
MONGO_URI=your_mongodb_connection_string_here

# 2. SECURITY (JWT Token Secret)
JWT_SECRET=write_anything_random_here_make_it_long
JWT_EXPIRES_IN=30d

# 3. IMAGE STORAGE (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# 4. MAPS (Mapbox - Required for Frontend Maps later)
# (Not strictly needed for backend startup, but good to have ready)
MAPBOX_TOKEN=your_mapbox_token